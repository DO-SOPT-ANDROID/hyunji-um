<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_friend_img"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jordy"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_item_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/iv_item_friend_img"
        app:layout_constraintTop_toTopOf="@id/iv_item_friend_img" />

    <TextView
        android:id="@+id/tv_item_friend_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/iv_item_friend_img"
        app:layout_constraintTop_toBottomOf="@id/tv_item_friend_name" />
</androidx.constraintlayout.widget.ConstraintLayout>